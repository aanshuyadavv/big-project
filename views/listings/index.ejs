<% layout('/layouts/boilerPlate') -%>
    <style>
        .filters {
            flex-wrap: wrap;
            /* overflow: hidden; */
            justify-content: space-evenly;
        }

        .filter {
            margin-top: 2rem;
            text-align: center;
            margin-right: 1rem;
            opacity: 0.7;
        }

        .filter p {
            font-size: .8rem;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .tax-info {
            display: none;
        }

        .tax-toggle {
            margin-left: 1rem;
            border: 1px solid grey;
            border-radius: 1rem;
            height: 2.5rem;
            padding-left: 1rem;
            padding-right: 1rem;
            padding-top: 0.5rem;
        }
    </style>

    <body>

            <div class="filters d-flex align-items-center">
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-sun"></i></div>
                <p>Iconic Cities</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-house-flood-water"></i></div>
                <p>Houseboat</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-key"></i></div>
                <p>New</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-water"></i></div>
                <p>Lake</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mug-saucer"></i></div>
                <p>Bed & breakfasts</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-landmark"></i></div>
                <p>Historical homes</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-caravan"></i></div>
                <p>Camper vans</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-person-skiing"></i></div>
                <p>Skiing</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-tent"></i></div>
                <p>Camping</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-snowflake"></i></div>
                <p>Arctic</p>
            </div>

            <div class="tax-toggle">

                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Display Taxes</label>
                </div>

            </div>
        </div>

        <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1  mt-3 ">

            <% for(listing of allListings){ %>

                <a href="/listings/<%=listing._id%>" class="listing-link">

                    <div class="card listing-card">

                        <div class="img">
                            <img src="<%=listing.image.url%>">
                        </div>

                        <!-- <div class="card-img-overlay">

                        </div> -->

                        <div class="card-body">

                            <p class="card-text">
                                <b>
                                    <%=listing.title%>
                                </b>

                            <p>
                                &#8377;<%=listing.price%>/night <i class="tax-info">+18 GST</i>
                            </p>
                            </p>

                        </div>

                    </div>

                </a>

                <% } %>
        </div>



    </body>
    <script>
        let switchToggel = document.getElementById("flexSwitchCheckDefault")
        switchToggel.addEventListener("click", () => {
            let taxInfo = document.getElementsByClassName("tax-info")
            // console.log(taxInfo)
            for (info of taxInfo) {
                if (info.style.display != "inline") {

                    info.style.display = 'inline'
                }
                else {
                    info.style.display = 'none'

                }
            }
        })
    </script>